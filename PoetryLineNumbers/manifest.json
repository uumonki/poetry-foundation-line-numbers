{
    "manifest_version": 2,
    "name": "Poem Line Numbers",
    "version": "1.0",
    "description": "Add line numbers to poems on PoetryFoundation.org",
    "permissions": [
      "activeTab"
    ],
    "browser_action": {
      "default_popup": "hello.html"
    },
    "content_scripts": [
      {
        "matches": ["https://www.poetryfoundation.org/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }
  